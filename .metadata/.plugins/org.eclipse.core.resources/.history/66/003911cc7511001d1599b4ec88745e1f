package com.example.demo;

import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class StudentContro {
	
	@Autowired
	StudentSer sserv;
	
	@RequestMapping("first")
	public ModelAndView insert(HttpServletRequest req,HttpServletResponse res) {
		ModelAndView mv = new ModelAndView();
		Student s = new Student();
		String sname= req.getParameter("name");
		String semail = req.getParameter("email");
		s.setName(sname);
		s.setEmail(semail);
		Student s1=sserv.insert(s);
		if(s1!=null) {
			mv.setViewName("status");
		}
		return mv;
	}
	
	@RequestMapping("updatebyid")
	public ModelAndView update(HttpServletRequest req,HttpServletResponse res) {
		ModelAndView mv = new ModelAndView();
		Student s = new Student();
		int id= Integer.parseInt(req.getParameter("id1"));
		String sname= req.getParameter("name");
		String semail = req.getParameter("email");
		s.setSid(id);
		s.setName(sname);
		s.setEmail(semail);
		sserv.updatebyid(s);
		List<Student> slist = sserv.getall();
		mv.setViewName("display");
		mv.addObject("stul", slist);
		return mv;
		
	}
	
	
	
	@RequestMapping("deletebyid")
	public ModelAndView delete(HttpServletRequest req,HttpServletResponse res) {
		ModelAndView mv = new ModelAndView();
		int id= Integer.parseInt(req.getParameter("id1"));
		sserv.deletebyId(id);
		List<Student> slist = sserv.getall();
		mv.setViewName("display");
		mv.addObject("stul", slist);
		return mv;
		
	}
	
	
	
	@RequestMapping("getall")
	public ModelAndView getall(HttpServletRequest req,HttpServletResponse res) {
		ModelAndView mv = new ModelAndView();
		List<Student> slist = sserv.getall();
		mv.setViewName("display");
		mv.addObject("stul", slist);
		return mv;
	}
	
	

	
}
